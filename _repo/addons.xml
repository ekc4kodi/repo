<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon 	id="repository.EKC" 
		name="[COLOR dodgerblue]EKC[/COLOR]Repository" 
		version="1.0" 
		provider-name="EKC">
	<extension point="xbmc.addon.repository" name="EKC: Repository">
		<info compressed="false">https://raw.githubusercontent.com/ekc4kodi/repo/master/_repo/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/ekc4kodi/repo/master/_repo/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/ekc4kodi/repo/master/_repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>EKC Repository</summary>
		<description>This repository has the Wizards and Addons By EKC</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.EKCWizard" name="EKC Wizard" version="1.1" provider-name="Andrew">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">EKC Wizard</summary>
    <description lang="en">EKC Wizard, Gives you access to our custom builds, apks and full save data options!</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>