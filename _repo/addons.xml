<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon 	id="repository.MBMan" 
		name="[COLOR dodgerblue][B]MBMan Builds[/B][/COLOR] [COLOR snow]Repository[/COLOR]" 
		version="1.1" 
		provider-name="MBManTech">
	<extension point="xbmc.addon.repository" name="MBMan Builds: Repository">
		<info compressed="false">http://mbmantech.com/_repo/addons.xml</info>
		<checksum>http://mbmantech.com/_repo/addons.xml.md5</checksum>
		<datadir zip="true">http://mbmantech.com/_repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>MBManTech Repository</summary>
		<description>This repository has the Wizards and Addons By MBManTech</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.BManMedia-17-Wizard" name="[COLOR dodgerblue]BMan Media 17[/COLOR] [COLOR silver] Wizard[/COLOR]" version="1.8.1" provider-name="MBMan">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">BMan Media 17 Wizard</summary>
    <description lang="en">BMan Media 17 Wizard allows you to get access to the latest MBMan Custom Builds for Krypton 17 and Full Maintenance for you Media Center.
[CR]This Wizard was Created using Aftermath Wizard
[CR] All credit for Coding of this Wizard goes to Aftermath Surfacingx, FTG for Retro, and all other Devs involved in this Project.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>